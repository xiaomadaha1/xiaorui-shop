generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  USERNAME String @id @unique
  PWD      String
}

model Goods {
  id       String  @id @unique
  name     String
  price    Decimal
  discount Float
  img      String
}

model GoodDetail {
  id       String  @id @unique
  name     String
  price    Decimal
  discount Float
  img      String //存放数组转json字符串
  detail   String
}

model ShopCart {
  id       String @id @unique
  goodIds  String
  username String
}
